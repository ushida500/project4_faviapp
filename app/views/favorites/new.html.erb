<h1>Welcome To Favi-App!</h1>
<h2>All your favorites, one site</h2>

<div class="container1"> 
    <%= form_for @favorite do |f| %>
        
    <div class="form-group">
        <%= f.label :title, 'Title', class: 'col-md-4 control-label' %>
        <div class="col-md-5">
            <%= f.text_field :title,  class: 'form-control' %>
        </div>
    </div>
    <br />
    <div class="form-group">
            <%= f.label :description, 'Description', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :description, class: 'form-control' %>
            </div>
    </div>
    <br />
    <div class="form-group">
        <%= f.label :url, 'URL', class: 'col-md-4 control-label' %>
        <div class="col-md-5">
            <%= f.text_field :url, class: 'form-control' %>
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-8 col-md-offset-4">
            <%= f.submit "Add New Fav", class: "btn btn-large btn-dark" %>
        </div>
    </div>
<% end %>
</div>
