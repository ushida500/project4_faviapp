
<div class="container">
    <h1>FAVI-APP</h1>
    <h3>Time to bookmark all your online favorites!</h2> 
    <h4>Everything you love in one place: books, trips, quotes, images, fashion and more.</h3>
    <br /> 
    <fieldset>
        <%= form_tag sessions_path do %>
            <h5>Log In To Favi App</h5>
        
            <div class="form-group">
                <label for="exampleDropdownFormEmail2">Email address</label>
                <%= text_field_tag :email, nil, {class: "form-control", placeholder: "Email"} %>
            </div>
            <div class="form-group">
                <label for="exampleDropdownFormPassword2">Password</label>
                <%= password_field_tag :password, nil, {class: "form-control", placeholder: "Password"} %>
            </div>
        
            <%= submit_tag "Log In" %>
        <% end %>
    </fieldset>
    <br /> 
    <div class="button2">
        <a href="/users/new"><input type="button" value="New? Sign Up!"></a>
    </div>
</div>




